<h1 class="login-header">Login</h1>

<div class="container">
  <%= form_tag '/login' do %>

    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag "Login", class: "btn btn-primary" %>

  <% end %>
</div>
