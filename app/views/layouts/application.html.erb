<!DOCTYPE html>
<html>
<head>
  <title>Allofasutton</title>

  <%= csrf_meta_tags %>
  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" media="screen" title="no title" charset="utf-8">
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <nav class="nav-bar">
      <div class="navbar-fixed">
          <div class="nav-wrapper">
              <%= link_to root_path do %>
                <i class="fa fa-home" aria-hidden="true"></i> #TagLine
              <% end %>
            <ul class="right hide-on-med-and-down">
                <% if current_user %>
              <li>
                Hi, <%= current_user.name %>
                <%= link_to 'Logout', logout_path %>
              </li>
              <% else %>
              <li>
                <%= link_to 'Login', login_path %>
              </li>
              <li>
                <%= link_to 'Register', new_user_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </nav>
      </div>
    </nav>


  <!--------------------------------------------->


  <%= yield %>
</body>
</html>
